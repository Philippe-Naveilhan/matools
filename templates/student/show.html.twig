{% extends 'base.html.twig' %}

{% block title %}Élève{% endblock %}

{% block body %}
    <h1 class="mt-5 mb-0 text-center">
        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-file-earmark-person" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path d="M4 0h5.5v1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5h1V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2z"/>
            <path d="M9.5 3V0L14 4.5h-3A1.5 1.5 0 0 1 9.5 3z"/>
            <path fill-rule="evenodd" d="M8 11a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
            <path d="M8 12c4 0 5 1.755 5 1.755V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1v-.245S4 12 8 12z"/>
        </svg>
        {{ student.firstname ~ ' ' ~ student.lastname }}
        <a class="text-primary-dark" href="{{ path('student_edit', {'id': student.id}) }}">
            <svg width="20px" height="20px" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
            </svg>
        </a>
        <br>
        <span class="h4">
            {% if student.level.id == 1 %}
            Petite Section
            {% elseif student.level.id == 2 %}
            Moyenne Section
            {% else %}
            Grande Section
            {% endif %}
        </span><span class="h4"> (Né(e) le {{ student.birthday|date("d/m/y") }})</span>
    </h1>

    <a class="button button-dyna" href="{{ path('student_by_classroom', {'id': student.classroom.id}) }}">Retour</a>
    <div class="evaluation row d-flex justify-content-around">
        {% for evalstudent in student.evalstudents %}
            <div class="bg-primary col-3 p-3">
                {{ evalstudent.evaluation.name }}
                <a class="" href="{{ path('eval_by_studenteval', {'id': evalstudent.id}) }}" target="_blank">
                   <span class="button button-dyna"><svg width="25px" height="25px" viewBox="0 0 16 16" class="bi bi-eye" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.134 13.134 0 0 0 1.66 2.043C4.12 11.332 5.88 12.5 8 12.5c2.12 0 3.879-1.168 5.168-2.457A13.134 13.134 0 0 0 14.828 8a13.133 13.133 0 0 0-1.66-2.043C11.879 4.668 10.119 3.5 8 3.5c-2.12 0-3.879 1.168-5.168 2.457A13.133 13.133 0 0 0 1.172 8z"/>
                        <path fill-rule="evenodd" d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                    </svg>
                       </span>
                </a>
            </div>
        {% endfor %}
    </div>
    <a class="button button-dyna" href="{{ path('student_by_classroom', {'id': student.classroom.id}) }}">Retour</a>
{% endblock %}
