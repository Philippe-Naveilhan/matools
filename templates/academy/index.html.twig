{% extends 'base.html.twig' %}

{% block title %}Academy index{% endblock %}

{% block body %}
    <h1>Academy index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Adress</th>
                <th>Zipcode</th>
                <th>City</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for academy in academies %}
            <tr>
                <td>{{ academy.id }}</td>
                <td>{{ academy.name }}</td>
                <td>{{ academy.adress }}</td>
                <td>{{ academy.zipcode }}</td>
                <td>{{ academy.city }}</td>
                <td>
                    <a href="{{ path('academy_show', {'id': academy.id}) }}">show</a>
                    <a href="{{ path('academy_edit', {'id': academy.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('academy_new') }}">Create new</a>
{% endblock %}
