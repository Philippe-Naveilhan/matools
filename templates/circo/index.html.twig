{% extends 'base.html.twig' %}

{% block title %}Circo index{% endblock %}

{% block body %}
    <h1>Circo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for circo in circos %}
            <tr>
                <td>{{ circo.id }}</td>
                <td>{{ circo.name }}</td>
                <td>
                    <a href="{{ path('circo_show', {'id': circo.id}) }}">show</a>
                    <a href="{{ path('circo_edit', {'id': circo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('circo_new') }}">Create new</a>
{% endblock %}
