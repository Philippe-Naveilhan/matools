{% extends 'base.html.twig' %}

{% block title %}Evalstudent index{% endblock %}

{% block body %}
    <h1>Evalstudent index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Comment</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evalstudent in evalstudents %}
            <tr>
                <td>{{ evalstudent.id }}</td>
                <td>{{ evalstudent.comment }}</td>
                <td>
                    <a href="{{ path('evalstudent_show', {'id': evalstudent.id}) }}">show</a>
                    <a href="{{ path('evalstudent_edit', {'id': evalstudent.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('evalstudent_new') }}">Create new</a>
{% endblock %}
