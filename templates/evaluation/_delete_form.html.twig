<form method="post" action="{{ path('evaluation_delete', {'id': evaluation.id}) }}" onsubmit="return confirm('Êtes-vous certain de vouloir supprimer cette évaluation ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evaluation.id) }}">
    <button class="button button-danger">Supprimer</button>
</form>
