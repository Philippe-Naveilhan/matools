{% extends 'base.html.twig' %}

{% block title %}Evaluation{% endblock %}

{% block body %}
    <h1 class="text-center mt-5">Saisie des résultats</h1>
<a class="button button-dyna" href="{{ path('evaluation_index', {'id': evaluation.classroom.id}) }}">Retour</a>


<div class="w-75 mx-auto">
    <h2 class="required w-100 text-center font-title h2 my-5">
        "{{ evaluation.name }}"
    </h2>
    <div id="evaluation_competence">
        {% for theme in evaluation.evalthemes %}
            <div class="col-10 offset-1 my-5 theme_container">
                <div class="text-center">
                    <div class="theme_title w-50 mx-auto d-flex justify-content-around align-items-center p-2">
                        <div class="font-size-10 font-weight-bold text-secondary-light">
                            {{ theme.name }}
                        </div>
                    </div>
                </div>
                {% for category in theme.evalcategories %}
                <div class="category_container pb-4 m-1 mt-5 position-relative">
                    {% if category.name != 'unique' %}
                    <div class="text-center">
                        <div class="category_title w-50 mx-auto text-center font-size-9 font-weight-bold">
                            {{ category.name }}
                        </div>
                    </div>
                    {% endif %}
                    <div class="row mx-0">
                        {% for bloc in category.evalblocs %}
                            <div class="row w-100 m-0 ml-3 align-items-center font-size-7 font-weight-bold">
                                {{ bloc.name }}
                            </div>
                            <div class="col-11 offset-1">
                            {% for competence in bloc.evalcompetences %}
                                    <div class="row">
                                        <a class="text-primary-dark pb-1 mr-2 text-decoration-none" href="{{ path('evalByCompetence_save', {'id': competence.id}) }}" title="Saisir les résultats de cet item">
                                            <svg class="text-dyna mb-2" width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-star-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.283.95l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                                            </svg>
                                        <span class="font-size-5 ml-2">{{ competence.name }}</span>
                                        </a>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
