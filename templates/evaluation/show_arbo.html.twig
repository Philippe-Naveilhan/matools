{% extends 'base.html.twig' %}

{% block title %}Evaluation{% endblock %}

{% block body %}
    <h1 class="required w-100 text-center text-primary font-title h2 my-5">
        Réalisation de l'évaluation
    </h1>
    <div class="mt-3">
        <a class="button button-dyna" href="{{ path('evaluation_index', {'id': evaluation.classroom.id}) }}">Retour</a>
    </div>

    <div class="w-75 mx-auto">
        <h2 class="text-center text-primary mt-5">"{{ evaluation.name }}"</h2>
        <div id="evaluation_competence">
            {% for theme in evaluation.evalthemes %}
                <div class="col-10 offset-1 my-5 theme_container">
                    <div class="text-center">
                        <div class="theme_title w-75 d-flex justify-content-around align-items-center p-2 font-size-2">
                            <div class="p-1 text-primary bg-light br-2">
                                THEME
                            </div>
                            <div class="font-size-10 font-weight-bold text-light">
                                {{ theme.name }}
                            </div>
                            <div>
                                <a class="text-light" href="{{ path('evaltheme_edit', {'id': theme.id}) }}">
                                    <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"></path>
                                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"></path>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                    {% for category in theme.evalcategories %}
                    <div class="category_container pb-4 m-1 mt-4 position-relative">
                        <div class="text-center {{ category.name == 'empty' ? 'd-none' : '' }}">
                            <div class="category_title w-75 mx-auto mb-3 d-flex justify-content-around align-items-center">
                                <div class="p-1 mr-2 text-light bg-primary font-size-2 br-2">
                                    CAT.
                                </div>
                                <span class="font-size-9 font-weight-bold">{{ category.name == 'unique' ? '- -' : category.name }}</span>
                                    <a class="text-primary-dark" href="{{ path('evalcategory_edit', {'id': category.id}) }}">
                                        <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"></path>
                                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"></path>
                                        </svg>
                                    </a>
                            </div>
                        </div>
                        <div class="mx-0">
                            {% for bloc in category.evalblocs %}
                                <div class="mb-5">
                                    {% if bloc.name != 'empty' %}
                                    <div class="row w-100 m-0 ml-3 align-items-center mb-3">
                                        <div class="p-1 mr-2 text-light bg-primary font-size-2 br-2">
                                            BLOC
                                        </div>
                                        <span class="font-weight-bold font-size-7">{{ bloc.name == 'unique' ? '- -' : bloc.name }}</span>
                                        <a class="ml-2 text-primary-dark" href="{{ path('evalbloc_edit', {'id': bloc.id}) }}">
                                            <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"></path>
                                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"></path>
                                            </svg>
                                        </a>
                                    </div>
                                    {% endif %}
                                {% set placeorder = 0 %}
                                <div id="bloc_{{ bloc.id }}" class="col-11 offset-1">
                                {% for competence in bloc.evalcompetences %}
                                        {% set placeorder = loop.length %}
                                        <div class="row">
                                            <div class="mb-1 p-1 mr-2 text-light bg-primary font-size-2 br-2">
                                                COMP.
                                            </div>
                                            <div class="up_and_down">
                                                {% if competence.placeorder != 1 %}
                                                    <a class="order" href="{{ path('evaluation_updown', {'id':competence.id, 'direction':'down'}) }}">
                                                        <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-arrow-up-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                            <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-7.5 3.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708l3-3a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707V11.5z"/>
                                                        </svg>
                                                    </a>
                                                {% else %}
                                                    <svg class="text-light" width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-arrow-up-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                        <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-7.5 3.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708l3-3a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707V11.5z"/>
                                                    </svg>
                                                {% endif %}
                                                {% if competence.placeorder != loop.length %}
                                                    <a class="order" href="{{ path('evaluation_updown', {'id':competence.id, 'direction':'up'}) }}">
                                                        <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-arrow-down-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                            <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v5.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V4.5z"/>
                                                        </svg>
                                                    </a>
                                                {% endif %}
                                            </div>
                                            <span class="font-size-5">{{ competence.name }}</span>
                                            <a class="ml-3 text-primary-dark" href="{{ path('evalcompetence_edit', {'id': competence.id}) }}" title="Modifier ou supprimer l'intitulé de la compétence">
                                                <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                                </svg>
                                            </a>
                                        </div>
                                    {% endfor %}
                                <div class="ml-5 my-3 font-size-3">
                                    <a class="button button-primary" href="{{path('evalcompetence_new', {'bloc': bloc.id}) }}">
                                        Ajouter une compétence
                                    </a>
                                </div>
                                </div>
                                </div>
                            {% endfor %}
                            {% if category.evalblocs[0] is defined and category.evalblocs[0].name == 'empty' %}
                                {#
                                Le bloc 1 est créée et a comme valeur 'empty',
                                le user ne souhaite donc pas créer de bloc dans cette catégorie.
                                #}
                            {% else %}
                                <div class="category_container border-0 mx-auto mt-5 position-relative">
                                    <div class="text-center d-flex justify-content-around">
                                        <div class="h4 col-5">
                                            <a class="text-primary-dark" href="{{ path('evalbloc_new', {'category': category.id}) }}">
                                                Ajouter un bloc de compétences<br>
                                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-plus-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                    <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
                                                </svg>
                                            </a>
                                        </div>
                                        {% if category.evalblocs|length == 0 %}
                                            <div class="h4 col-5">
                                                <a class="text-primary-dark" href="{{ path('evalbloc_new_empty', {'category': category.id}) }}">
                                                    Ne pas répartir les compétences en bloc<br>
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                                                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                                                    </svg>
                                                </a>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endif %}

                        </div>
                    </div>
                    {% endfor %}
                    {% if theme.evalcategories[0] is defined and theme.evalcategories[0].name == 'empty' %}
                            {#
                            La catégorie 1 est créée et a comme valeur 'empty',
                            le user ne souhaite donc pas créer de catégories dans ce thème.
                            #}
                    {% else %}
                    <div class="category_container pb-4 m-1 mt-5 position-relative">
                        <div class="text-center">
                            <div class="category_title w-75 mx-auto d-flex justify-content-around align-items-center">
                                <div class="h4 col-5">
                                    <a class="text-primary-dark" href="{{ path('evalcategory_new', {'theme': theme.id}) }}">
                                    Ajouter une catégorie<br>
                                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-plus-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
                                        </svg>
                                    </a>
                                </div>
                                {% if theme.evalcategories|length == 0 %}
                                <div class="h4 col-5">
                                    <a class="text-primary-dark" href="{{ path('evalcategory_new_empty', {'theme': theme.id}) }}">
                                    Ne pas couper ce thème en catégories<br>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                                        </svg>
                                    </a>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </div>
            {% endfor %}

            <div class="col-10 offset-1 my-5 theme_container">
                <div class="text-center">
                    <div class="theme_title w-50 mx-auto d-flex justify-content-around align-items-center p-2">
                        <div class="h3 text-light">
                            Ajout d'un nouveau thème
                            <a class="text-light" href="{{ path('evaltheme_new', {'eval': evaluation.id}) }}">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-plus-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>
        function onClickChangeOrder(event){
            event.preventDefault();
            let url = this.href;
            axios.get(url).then(function (response){
                let codBloc = "";
                let competences = JSON.parse(response.data.competences);
                let bloc = JSON.parse(response.data.bloc);
                codBloc = "";
                for (i in competences){
                    codBloc += '<div class="row">';
                    codBloc += '<div class="mb-1 p-1 mr-2 text-light bg-primary font-size-2 br-2">';
                    codBloc += 'COMP.';
                    codBloc += '</div>';
                    codBloc += '<div class="up_and_down">';
                    if (i !== '1') {
                        codBloc += '<a class="order" href="../updown/' + competences[i]['id'] + '/down">';
                        codBloc += '<svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-arrow-up-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">';
                        codBloc += '<path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-7.5 3.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708l3-3a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707V11.5z"/>';
                        codBloc += '</svg>';
                        codBloc += '</a>';
                    } else {
                        codBloc += '<svg class="text-light" width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-arrow-up-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">';
                        codBloc += '<path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-7.5 3.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708l3-3a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707V11.5z"/>';
                        codBloc += '</svg>';
                        }
                    if (i !== String(Object.keys(competences).length)) {
                        codBloc += '<a class="order" href="../updown/' + competences[i]['id'] + '/up">';
                        codBloc += '<svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-arrow-down-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">';
                        codBloc += '<path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v5.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V4.5z"/>';
                        codBloc += '</svg>';
                        codBloc += '</a>';
                    }
                    codBloc += '</div>';
                    codBloc += '<span class="font-size-5">' + competences[i]['name'] + '</span>';
                    codBloc += '<a class="ml-3 text-primary-dark" href="../../evalcompetence/' + competences[i]['id'] + '/edit" title="Modifier ou supprimer l\'intitulé de la compétence">';
                    codBloc += '<svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">';
                    codBloc += '<path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>';
                    codBloc += '<path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>';
                    codBloc += '</svg>';
                    codBloc += '</a>';
                    codBloc += '</div>';
                }
                codBloc += '<div class="ml-5 my-3 font-size-3">';
                codBloc += '<a class="button button-primary" href="../../evalcompetence/new/' + bloc + '">';
                codBloc += 'Ajouter une compétence';
                codBloc += '</a>';
                codBloc += '</div>';

                document.getElementById('bloc_' + bloc).innerHTML = codBloc;
                document.querySelectorAll('a.order').forEach(function(link){
                    link.addEventListener('click', onClickChangeOrder);
                })
            })
        }

        document.querySelectorAll('a.order').forEach(function(link){
            link.addEventListener('click', onClickChangeOrder);
        })
    </script>
{% endblock %}
