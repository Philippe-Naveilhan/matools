{% extends 'base.html.twig' %}

{% block title %}Evaluation{% endblock %}

{% block body %}
    <h1 class="text-center mt-5">"{{ evaluation.name }}"</h1>
<a class="button button-dyna" href="{{ path('evaluation_index', {'id': evaluation.classroom.id}) }}">Retour</a>


        <div>
        <h2 class="required w-100 text-center font-title h2 mt-5">
            Compléter les résultats
        </h2>

        <div id="evaluation_competence row p-0">
            {% for key,theme in themes %}
                <div class="h2 text-light col-12 bg-primary-dark m-0">{{ key }}</div>
                {% for key,category in theme %}
                    <div class="col-10 offset-1 border border-dark p-0">
                        <div class="h3 text-dark bg-secondary-light m-0">
                        {{ key == 'unique' ? '' :  key }}
                        </div>
                        {% for key,bloc in category %}
                            <div class="row m-0">
                                <div class="h4 col-3 p-2 border border-dark m-0">
                                    <p>{{ key }}</p>
                                </div>
                                <div class="col-9 p-0">
                                    {% set idbloc = bloc.id %}
                                    {% set placeorder = 0 %}
                                    {% for competence in bloc.competences %}
                                        {% set placeorder = loop.length %}
                                    <div class="h4 row m-0 border border-dark p-0">
                                        <div class="col-1 text-center d-flex align-items-center justify-content-center">
                                            <a class="text-dyna-light pb-1" href="{{ path('evalByCompetence_save', {'id': competence.id}) }}" title="Saisir les résultats de cet item">
                                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-star" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                    <path fill-rule="evenodd" d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.523-3.356c.329-.314.158-.888-.283-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767l-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288l1.847-3.658 1.846 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.564.564 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
                                                </svg>
                                            </a>
                                        </div>
                                        <div class="p-2 col-11 d-flex align-items-center">
                                        {{ competence.name }}
                                        </div>
                                    </div>
                        {% endfor %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endfor %}
            {% endfor %}

        </div>
        </div>

{% endblock %}
