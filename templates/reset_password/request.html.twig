{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1 class="text-center my-5">Réinitialisez votre mot de passe</h1>
<div class="text-center mb-5">
    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre e-mail et nous vous enverrons un message pour réinitialiser votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary my-3">Recevoir le mail de réinitialisation</button>
    {{ form_end(requestForm) }}
</div>
{% endblock %}
