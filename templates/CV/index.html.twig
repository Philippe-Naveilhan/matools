{% extends 'base.html.twig' %}

{% block title %}Portrait chinois{% endblock %}

{% block body %}
    <style>
        .card{
            color: black;
            height : 250px;
            min-width: 200px;
            width : calc(100%/3);
            position: relative;
            overflow: hidden;
        }
        .card-img{
            position: relative;
        }
        .card-img .img{
            position: relative;
            width: 100%;
            z-index: 1;
            opacity: 0.8;
        }
        .card-img .title{
            font-size: 25px;
            font-weight: bold;
            z-index: 10;
            position: absolute;
            width: 100%;
            text-align: center;
            top: 20px;
            transition: 1s;
        }
        .card-txt{
            z-index: 20;
            font-family: 'Montserrat Alternates', sans-serif;
            height: 250px;
            /*min-width: 180px;*/
            width: 100%;
            position: absolute;
            top:0px;
            transition: .8s;
            transform-origin: left;
            transform: perspective(2000px) rotateY(-90deg);
        }
        .card-txt .txt-bg{
            position: relative;
            width: 100%;
            height: 150px;
            opacity: 0.7;
        }
        .card-txt .txt-txt{
            position: absolute;
            font-size: 20px;
            top: 100px;
            width: 100%;
            height: 250px;
        }
        .card:hover .card-txt{
            transform: perspective(2000px) rotateY(0deg);
        }

        .card:hover .card-img .title{
            top: -50px;
            transition: 1s;
        }
    </style>
    <div class="my-4">
        <ul>
            {% for back in bg %}
                <li>{{ back }}</li>
            {% endfor %}
        </ul>
    </div>
    <div class="my-5 w-100 align-items-center">
        <div class="w-75 mx-auto d-flex flex-wrap justify-content-around">
            {% for key,item in titles %}
            <div class="card text-center">
                <div class="card-img">
                    <div class="img">
                        <img style="width: 100%" src="build/otero/{{ bg[key] }}">
                    </div>
                    <div class="title">
                        {{ item.title|upper }}
                    </div>
                </div>
                <div class="card-txt px-1 pt-5 text-center">
                    <div class="txt-bg" style="background-color: {{ item.color }}"></div>
                    <div class="txt-txt w-100">
                        <p class="my-auto">{{ item.text }}</p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

